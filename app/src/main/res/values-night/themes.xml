<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Quizeo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkgray</item>
        <item name="colorPrimaryVariant">@color/redd</item>
        <item name="colorOnPrimary">@color/white2</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/darkgray</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/popupOrangeDark</item>
        <item name="colorAccent">@color/purple2</item>
        <item name="colorBackgroundFloating">@color/white2</item>
        <item name="colorControlActivated">@color/redd</item>
    </style>

    <style name="ratingBar" parent = "Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">@color/yellowd</item>
        <item name="colorControlActivated">@color/yellowd</item>
        <item name="colorControlHighlight">@color/yellowd</item>
    </style>

    <style name="SplashScreenTheme" parent = "Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_background_night</item>
    </style>


</resources>